<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="com.hlushkov.movieland.entity.Movie" table="movies">
        <id name="id" column="id"/>
        <property name="nameRussian" column="name_russian"/>
        <property name="nameNative" column="name_native"/>
        <property name="yearOfRelease" column="year_of_release"/>
        <property name="description" column="description"/>
        <property name="rating" column="rating"/>
        <property name="price" column="price"/>
        <property name="picturePath" column="picture_path"/>
    </class>
</hibernate-mapping>